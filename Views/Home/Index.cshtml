@{
    ViewBag.Title = "Home Page";
}

<main class="container my-5">
    <!-- Title Section -->
    <section class="text-center mb-5">

        <h1 id="title" class="display-4 ">@ViewBag.Title</h1>
        <p class="lead text-muted">
            Your Dress is a free web platform for Admins and Sales teams, providing tools to create and manage customers, categories, items, and invoices with ease.
        </p>
        <hr class="w-25 mx-auto border-primary">
    </section>

    <!-- Feature Sections -->
    <div class="row mt-4">
        <!-- Categories Section -->
        <section class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h2 id="Category" class="card-title txt-prim">
                        <i class="fas fa-layer-group mr-2"></i> Categories
                    </h2>
                    <p class="card-text text-muted">Manage categories for your website:</p>
                    <ul class="text-muted">
                        <li>Create new categories.</li>
                        <li>Edit existing categories.</li>
                        <li>Delete categories if needed.</li>
                        <li>Display all categories in a visually appealing table.</li>
                    </ul>
                    <div class="text-center mt-3">
                        @Html.ActionLink("Get Started", "Index", "Category", new { area = "" }, new { @class = "btn btn-prim btn-lg text-white" })
                    </div>
                </div>
            </div>
        </section>

        <!-- Customers Section -->
        <section class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h2 id="Customer" class="card-title txt-prim">
                        <i class="fas fa-user-friends mr-2"></i> Customers
                    </h2>
                    <p class="card-text text-muted">Manage customers for your website:</p>
                    <ul class="text-muted">
                        <li>Add new customers to your database.</li>
                        <li>Edit customer details.</li>
                        <li>Delete customers if necessary.</li>
                        <li>View all customers in a user-friendly table.</li>
                    </ul>
                    <div class="text-center mt-3">
                        @Html.ActionLink("Get Started", "Index", "Customer", new { area = "" }, new { @class = "btn btn-prim btn-lg text-white" })
                    </div>
                </div>
            </div>
        </section>
    </div>

    <div class="row mt-4">
        <!-- Items Section -->
        <section class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h2 id="Items" class="card-title txt-prim">
                        <i class="fas fa-boxes mr-2"></i> Managing Items
                    </h2>
                    <p class="card-text text-muted">Manage items on your website:</p>
                    <ul class="text-muted">
                        <li>Add new items to your inventory.</li>
                        <li>Edit existing items to update details or pricing.</li>
                        <li>Delete items that are no longer needed.</li>
                        <li>View all items in a structured list or grid view.</li>
                    </ul>
                    <div class="text-center mt-3">
                        @Html.ActionLink("Get Started", "Index", "Item", new { area = "" }, new { @class = "btn btn-prim btn-lg text-white" })
                    </div>
                </div>
            </div>
        </section>

        <!-- Invoices Section -->
        <section class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h2 id="Invoices" class="card-title txt-prim">
                        <i class="fas fa-file-invoice-dollar mr-2"></i> Invoices
                    </h2>
                    <p class="card-text text-muted">Manage invoices for your website:</p>
                    <ul class="text-muted">
                        <li>Create new invoices for sales transactions.</li>
                        <li>Edit existing invoices to update details or add discounts.</li>
                        <li>Delete invoices if needed.</li>
                        <li>View all invoices in a structured table format.</li>
                    </ul>
                    <div class="text-center mt-3">
                        @Html.ActionLink("Get Started", "Index", "Invoice", new { area = "" }, new { @class = "btn btn-prim btn-lg text-white" })
                    </div>
                </div>
            </div>
        </section>
    </div>

</main>

@section Scripts {
    <script>
        var timeout;
        document.onmousemove = resetTimer;
        document.onkeypress = resetTimer;

        function startTimer() {
            timeout = setTimeout(function () {
                if (confirm("Do you want to continue?")) {
                    resetTimer();
                } else {
                    window.location.href = '@Url.Action("Logout", "Account")';
                }
            }, 120000); // 2 minutes
        }

        function resetTimer() {
            clearTimeout(timeout);
            startTimer();
        }

        startTimer();
    </script>
}

<style>
    body {
        background-color: #f9f9fb;
    }

    main {
        max-width: 1100px;
    }

    h1, h2 {
        font-weight: bold;
    }

    .card {
        border: none;
        border-radius: 8px;
    }
    #title {
        color: #182848;
        font-weight:600;
    }
    .card-title {
        font-size: 1.5rem;
    }

    .btn-prim  {
        background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
        border: none;
    }

   

    .txt-prim {
        color: #182848;
    }
</style>
