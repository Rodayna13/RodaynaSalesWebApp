@{
    ViewBag.Title = "About Us";
}
<main aria-labelledby="title" class="about-page container py-5">
    <div class="text-center mb-5">
        <h2 id="title" class="display-4 font-weight-bold txt-prim">@ViewBag.Title</h2>
        <p class="lead mt-3 text-muted">Your destination for quality, convenience, and exceptional customer service.</p>
        <hr class="w-50 mx-auto border-primary">
    </div>

    <section class="mission-vision">
        <div class="row">
            <div class="col-lg-6 text-center mb-5">
                <div class="icon-container bg-prim text-white mx-auto mb-4">
                    <i class="fas fa-bullseye fa-2x"></i>
                </div>
                <h3 class="font-weight-bold text-seco">Our Mission</h3>
                <p class="text-muted">
                    We aim to create a seamless online shopping experience, connecting customers with top-quality products and empowering businesses with the tools they need to succeed.
                </p>
            </div>

            <div class="col-lg-6 text-center mb-5">
                <div class="icon-container bg-prim text-white mx-auto mb-4">
                    <i class="fas fa-lightbulb fa-2x"></i>
                </div>
                <h3 class="font-weight-bold text-seco">Our Vision</h3>
                <p class="text-muted">
                    We envision a future where shopping is easy, secure, and delightful. Our platform continually adapts to meet the evolving needs of both customers and businesses.
                </p>
            </div>
        </div>
    </section>

    <section class="values">
        <h3 class="text-center font-weight-bold text-seco mb-4">Our Values</h3>
        <div class="row text-center">
            <div class="col-md-4">
                <div class="icon-container bg-prim text-white mx-auto mb-3">
                    <i class="fas fa-smile fa-2x"></i>
                </div>
                <h5 class="txt-prim">Customer Satisfaction</h5>
                <p class="text-muted">
                    We are dedicated to ensuring a delightful shopping experience, tailoring our platform to meet your unique needs.
                </p>
            </div>
            <div class="col-md-4">
                <div class="icon-container bg-prim text-white mx-auto mb-3">
                    <i class="fas fa-lock fa-2x"></i>
                </div>
                <h5 class="txt-prim">Trust and Security</h5>
                <p class="text-muted">
                    Security is our priority. We provide a safe and reliable environment for all transactions, building trust between customers and sellers.
                </p>
            </div>
            <div class="col-md-4">
                <div class="icon-container bg-prim text-white mx-auto mb-3">
                    <i class="fas fa-rocket fa-2x"></i>
                </div>
                <h5 class="txt-prim">Innovation</h5>
                <p class="text-muted">
                    We stay at the forefront of technology, constantly innovating to deliver a superior shopping experience.
                </p>
            </div>
        </div>
    </section>
</main>

<style>
    body {
        background-color: #f0f2f5;
        font-family: 'Arial', sans-serif;
    }

    .about-page {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        padding: 40px;
        max-width: 900px;
        margin: auto;
    }

    #title {
        color: #182848;
    }

    .font-weight-bold {
        font-weight: 700;
    }

    .text-seco {
        color: #15181c;
    }

    .txt-prim {
        color: #182848;
    }

    .icon-container {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
    }

    .mission-vision, .values {
        margin-top: 40px;
    }

        .values h5 {
            font-size: 1.2rem;
            margin-top: 15px;
            margin-bottom: 10px;
        }

    .text-muted {
        color: #6c757d;
    }

    hr {
        height: 3px;
    }

    .container {
        max-width: 90%;
        padding-left: 15px;
        padding-right: 15px;
    }
    .bg-prim {
        background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
    }
</style>
