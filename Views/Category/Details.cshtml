@model Core.Entities.Category

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-body p-4">
            <h2 class="text-center txt-prim font-weight-bold mb-4">Category Details</h2>

            <!-- Category Details -->
            <div class="mb-4">
                <h4 class="txt-prim font-weight-bold">Category</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4 font-weight-semibold">@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                </dl>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-center">
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-outline-warning btn-lg rounded-pill px-4 mr-2" })
                @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-outline-danger btn-lg rounded-pill px-4 mr-2" })
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-primary btn-lg rounded-pill px-4" })
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    /* Text Color */
    .txt-prim {
        color: #182848;
    }
    /* Button Styling */
    .btn-outline-warning {
        color: #f0c724;
        border-color: #856404;
        margin: 5px;
    }

        .btn-outline-warning:hover {
            background-color: #f0c724;
        }

    .btn-outline-danger {
        color: #f05b5b;
        border-color: #721c24;
        margin: 5px;
    }

        .btn-outline-danger:hover {
            background-color: #f05b5b;
        }

    .btn-outline-primary {
        color: #0f2552;
        border-color: #182848;
        margin: 5px;
    }

        .btn-outline-primary:hover {
            background-color: #0f2552;
        }
    /* Card and Typography */
    .card {
        border-radius: 1rem;
    }

    .font-weight-semibold {
        font-weight: 600;
    }
</style>
