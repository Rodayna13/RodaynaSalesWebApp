@model IEnumerable<Core.Entities.Category>

<!-- Alert Message with Close Button -->
@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        @ViewBag.Message
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<!-- Page Header with Actions -->
<div class="d-flex justify-content-between align-items-center my-4 p-3 bg-light shadow-sm rounded">
    <h2 class="text-dark font-weight-bold mb-0">Categories</h2>
    <div>
        @Html.ActionLink("Create New Category", "Create", null, new { @class = "btn btn-prim  btn-lg rounded-pill mr-2", title = "Add a new category" })
        @Html.ActionLink("Upload from Excel", "UploadExcel", null, new { @class = "btn btn-outline-secondary btn-lg rounded-pill", title = "Upload categories from an Excel file" })
    </div>
</div>

<!-- Categories Table in a Card Layout -->
<div class="card shadow-lg border-0">
    <div class="card-body p-0">
        <table class="table table-hover table-striped mb-0">
            <thead class="bg-dark text-white">
                <tr>
                    <th class="p-3">@Html.DisplayNameFor(model => model.Name)</th>
                    <th class="text-center p-3">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle p-3">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td class="text-center align-middle p-3">
                            <div class="btn-group">
                                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm fas fa-edit", title = "Edit Category" })
                                @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm fas fa-info-circle", title = "View Details" })
                                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm fas fa-trash-alt", title = "Delete Category", onclick = "return confirm('Are you sure you want to delete this category?');" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Custom CSS for Styling -->
<style>
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .table td, .table th {
        vertical-align: middle;
    }

    .btn-group .btn {
        margin-right: 5px;
    }

    .table thead th {
        border-top: none;
        border-bottom: 2px solid #dee2e6;
    }
    .btn-prim {
        background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
        border: none;
        color:white;
    }
</style>
