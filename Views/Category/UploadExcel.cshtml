@{
    ViewBag.Title = "Upload Categories from Excel";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-body p-4">
            <h2 class="text-center mb-4 txt-prim font-weight-bold">Upload Categories from Excel</h2>

            <!-- Display Error Message if any -->
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @ViewBag.ErrorMessage
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <!-- Form for File Upload -->
            @using (Html.BeginForm("UploadExcel", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken() <!-- This generates the required anti-forgery token -->

                <div class="form-group">
                    <label for="file" class="font-weight-semibold">Select Excel File:</label>
                    <input type="file" name="file" class="form-control-file" required />
                    @Html.ValidationMessage("File", "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-prim  btn-lg rounded-pill px-4">
                        <i class="fas fa-upload mr-2"></i>Upload
                    </button>
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-secondary btn-lg rounded-pill px-4" })
                </div>
            }
        </div>
    </div>
</div>

<!-- Custom CSS for Styling -->
<style>
    .form-group {
        margin-bottom: 1.5rem;
    }

    .alert-dismissible {
        padding-right: 2.5rem;
    }

    .card {
        border-radius: 1rem;
    }

    .btn-lg {
        font-size: 1.2rem;
    }

    .btn-prim  {
        background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
        border-color: none;
    }

    .btn-outline-secondary {
        border-color: #6c757d;
        color: #6c757d;
    }

        .btn-outline-secondary:hover {
            background-color: #f8f9fa;
        }
    .txt-prim {
        color: #182848;
    }
    .btn i {
        font-size: 1.2rem;
    }
</style>
