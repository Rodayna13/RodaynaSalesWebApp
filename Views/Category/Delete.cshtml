@model Core.Entities.Category

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-body p-4">
            <h2 class="text-center txt-prim font-weight-bold mb-4">Delete Category</h2>

            <!-- Category Details -->
            <div class="mb-4">
                <h4 class="txt-prim font-weight-bold">Category Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4 font-weight-semibold">@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                </dl>
            </div>

            <!-- Delete Confirmation Message -->
            <h5 class="text-danger text-center mb-4">Are you sure you want to delete this Category?</h5>

            <!-- Delete and Cancel Buttons -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-prim btn-lg rounded-pill px-4 text-white mr-2">
                        Delete
                    </button>
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-dark btn-lg rounded-pill px-4" })
                </div>
            }
        </div>
    </div>
</div>

<!-- Custom CSS -->
<style>
    /* Text Color */
    .txt-prim {
        color: #182848;
    }
    /* Primary Button Style */
    .btn-prim {
        background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
        border: none;
        color: white;
        margin:5px;
    }

        .btn-prim:hover {
            background: linear-gradient(135deg, #182848 0%, #4b6cb7 100%);
        }
    /* Card Styling */
    .card {
        border-radius: 1rem;
    }

    .btn-lg {
        font-size: 1.2rem;
    }
    /* Label Styling */
    .font-weight-semibold {
        font-weight: 600;
    }
</style>
